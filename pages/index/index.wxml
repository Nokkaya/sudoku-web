<!--index.wxml-->
<view class="container">
  <view class="logo-section">
    <image class="logo" src="/images/logo.svg" mode="aspectFit"></image>
    <text class="title">SUDOKU</text>
    <text class="subtitle">数独大师</text>
  </view>

  <view class="mode-section">
    <text class="section-label">选择难度</text>
    <view class="mode-list">
      <view 
        wx:for="{{modes}}" 
        wx:key="id" 
        class="mode-item {{selectedMode === index ? 'active' : ''}}"
        bindtap="selectMode"
        data-index="{{index}}"
      >
        <view class="mode-indicator" wx:if="{{selectedMode === index}}"></view>
        <text class="mode-name">{{item.name}}</text>
        <text class="mode-desc" wx:if="{{selectedMode === index}}">{{item.holes}}个空格</text>
      </view>
    </view>
  </view>

  <view class="action-section">
    <view class="start-btn" bindtap="startGame">
      <text>开始游戏</text>
      <view class="btn-arrow"></view>
    </view>
  </view>
</view>
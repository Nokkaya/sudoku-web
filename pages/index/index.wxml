<!--index.wxml-->
<view class="container">
  <!-- 顶部Logo -->
  <view class="logo-section">
    <view class="logo-wrapper">
      <view class="logo-bg">
        <text class="logo-number">9</text>
      </view>
      <view class="logo-accent"></view>
    </view>
    <text class="title">SUDOKU</text>
    <text class="subtitle">数独大师</text>
  </view>

  <!-- 难度选择 -->
  <view class="mode-section">
    <text class="section-label">选择难度</text>
    <view class="mode-list">
      <view 
        wx:for="{{modes}}" 
        wx:key="id" 
        class="mode-item {{selectedMode === index ? 'active' : ''}}"
        bindtap="selectMode"
        data-index="{{index}}"
      >
        <view class="mode-icon">
          <view class="mode-icon-dot"></view>
          <view class="mode-icon-dot"></view>
          <view class="mode-icon-dot"></view>
        </view>
        <view class="mode-info">
          <text class="mode-name">{{item.name}}</text>
          <text class="mode-desc">{{item.holes}} 个空格</text>
        </view>
        <view class="mode-check">
          <view class="mode-check-icon"></view>
        </view>
      </view>
    </view>
  </view>

  <!-- 开始按钮 -->
  <view class="action-section">
    <view class="start-btn" bindtap="startGame">
      <text>开始游戏</text>
      <view class="btn-arrow-icon"></view>
    </view>
  </view>
</view>
/* index.wxss - 奢华极简主义设计 */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Noto+Serif+SC:wght@400;600&display=swap');

page {
  height: 100%;
  background: #0a0a0a;
  font-family: 'Noto Serif SC', 'Playfair Display', serif;
  overflow: hidden;
}

.page {
  position: relative;
  min-height: 100vh;
  padding: 60rpx 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

/* 装饰性背景 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 0;
}

.deco-circle {
  position: absolute;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.deco-circle.deco-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.deco-circle.deco-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 200rpx;
  left: -50rpx;
}

.deco-line {
  position: absolute;
  background: rgba(255, 255, 255, 0.06);
}

.deco-line.deco-1 {
  width: 200rpx;
  height: 2rpx;
  top: 30%;
  right: 10%;
}

.deco-line.deco-2 {
  width: 2rpx;
  height: 150rpx;
  bottom: 15%;
  left: 20%;
}

.deco-dots {
  position: absolute;
  bottom: 10%;
  right: 15%;
  width: 60rpx;
  height: 60rpx;
  background-image: radial-gradient(rgba(255, 255, 255, 0.15) 2rpx, transparent 2rpx);
  background-size: 12rpx 12rpx;
}

/* 主视觉区域 */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  z-index: 2;
}

.hero-number {
  font-size: 280rpx;
  font-weight: 200;
  color: transparent;
  -webkit-text-stroke: 2rpx rgba(212, 175, 55, 0.6);
  line-height: 1;
  letter-spacing: -20rpx;
  margin-bottom: -20rpx;
}

.hero-grid {
  display: grid;
  grid-template-columns: repeat(3, 24rpx);
  grid-template-rows: repeat(3, 24rpx);
  gap: 4rpx;
  margin-bottom: 48rpx;
}

.grid-cell {
  border: 1rpx solid rgba(212, 175, 55, 0.3);
  border-radius: 4rpx;
}

.grid-cell.filled {
  background: rgba(212, 175, 55, 0.8);
}

.hero-title-group {
  text-align: center;
}

.hero-title {
  display: block;
  font-family: 'Playfair Display', serif;
  font-size: 72rpx;
  font-weight: 400;
  letter-spacing: 24rpx;
  color: #f5f5f0;
  margin-bottom: 16rpx;
}

.hero-subtitle {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 8rpx;
  color: rgba(212, 175, 55, 0.6);
  text-transform: uppercase;
}

/* 难度选择区 */
.difficulty-section {
  flex: 1;
  z-index: 2;
}

.section-label {
  display: block;
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 12rpx;
  color: rgba(255, 255, 255, 0.3);
  text-transform: uppercase;
  margin-bottom: 36rpx;
  padding-left: 8rpx;
}

.difficulty-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.diff-card {
  position: relative;
  overflow: hidden;
}

.diff-card-inner {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 40rpx 36rpx;
  background: rgba(255, 255, 255, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
}

.diff-card:hover .diff-card-inner {
  background: rgba(255, 255, 255, 0.04);
  border-color: rgba(255, 255, 255, 0.15);
}

.diff-card.active .diff-card-inner {
  background: rgba(212, 175, 55, 0.05);
  border-color: rgba(212, 175, 55, 0.4);
}

.diff-icon {
  font-size: 24rpx;
  color: rgba(212, 175, 55, 0.5);
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.diff-card.active .diff-icon {
  color: rgba(212, 175, 55, 0.9);
}

.diff-name {
  font-size: 32rpx;
  font-weight: 400;
  color: #f5f5f0;
  letter-spacing: 4rpx;
  margin-bottom: 8rpx;
}

.diff-card.active .diff-name {
  color: #d4af37;
}

.diff-meta {
  font-size: 22rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.35);
  letter-spacing: 2rpx;
}

.diff-accent {
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
  transform: skewX(-15deg);
}

/* 开始按钮 */
.action-area {
  margin-top: 60rpx;
  z-index: 2;
}

.start-button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 48rpx;
  background: #f5f5f0;
  border: none;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.start-button:active {
  transform: scale(0.98);
  background: #e8e8e0;
}

.btn-text {
  font-family: 'Playfair Display', serif;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 8rpx;
  color: #0a0a0a;
  text-transform: uppercase;
}

.btn-deco {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.btn-deco .deco-line {
  width: 60rpx;
  height: 1rpx;
  background: #0a0a0a;
  position: static;
}

.btn-deco .deco-arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #0a0a0a;
  border-bottom: 2rpx solid #0a0a0a;
  transform: rotate(-45deg);
}
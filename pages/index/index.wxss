/* index.wxss */
page {
  height: 100%;
  background: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 120rpx 60rpx;
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 300;
  letter-spacing: 16rpx;
  color: #2D3436;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 4rpx;
  color: #636E72;
}

.mode-section {
  width: 100%;
  margin-bottom: 80rpx;
}

.section-label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  color: #B2BEC3;
  text-transform: uppercase;
  margin-bottom: 32rpx;
  text-align: center;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 36rpx 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 3rpx solid #DFE6E9;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.mode-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.mode-item.active {
  background: #0066FF;
  border-color: #0066FF;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 255, 0.3);
}

.mode-indicator {
  position: absolute;
  left: 20rpx;
  width: 10rpx;
  height: 10rpx;
  background: #00D68F;
  border-radius: 50%;
}

.mode-item.active .mode-indicator {
  background: #00D68F;
}

.mode-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-left: 28rpx;
}

.mode-item.active .mode-name {
  color: #FFFFFF;
}

.mode-desc {
  position: absolute;
  right: 40rpx;
  font-size: 24rpx;
  color: #636E72;
}

.mode-item.active .mode-desc {
  color: rgba(255, 255, 255, 0.8);
}

.action-section {
  width: 100%;
}

.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #0066FF 0%, #00D68F 100%);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 255, 0.35);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 102, 255, 0.25);
}

.start-btn text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.btn-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
  border-right: 3rpx solid #FFFFFF;
  border-bottom: 3rpx solid #FFFFFF;
  transform: rotate(-45deg);
}
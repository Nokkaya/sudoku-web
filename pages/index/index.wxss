/* index.wxss */
page {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  height: 100%;
  box-sizing: border-box;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 20rpx;
}

.mode-select {
  width: 100%;
  margin-bottom: 80rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 30rpx;
}

.mode-list {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.mode-item {
  width: 180rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.mode-item.active {
  background: #ffffff;
  color: #667eea;
  transform: scale(1.05);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.mode-item text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.mode-item.active text {
  color: #667eea;
}

.start-btn {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  background: #ffffff;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}
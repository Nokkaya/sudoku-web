/* index.wxss */
page {
  height: 100%;
  background: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 120rpx 60rpx;
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 300;
  letter-spacing: 16rpx;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 4rpx;
  color: #999999;
}

.mode-section {
  width: 100%;
  margin-bottom: 80rpx;
}

.section-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  color: #cccccc;
  text-transform: uppercase;
  margin-bottom: 32rpx;
  text-align: center;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 36rpx 40rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.mode-item.active {
  background: #1a1a1a;
  border-color: #1a1a1a;
}

.mode-indicator {
  position: absolute;
  left: 20rpx;
  width: 8rpx;
  height: 8rpx;
  background: #007AFF;
  border-radius: 50%;
}

.mode-item.active .mode-indicator {
  background: #007AFF;
}

.mode-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-left: 24rpx;
}

.mode-item.active .mode-name {
  color: #ffffff;
}

.mode-desc {
  position: absolute;
  right: 40rpx;
  font-size: 24rpx;
  color: #666666;
}

.mode-item.active .mode-desc {
  color: rgba(255, 255, 255, 0.6);
}

.action-section {
  width: 100%;
}

.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: #1a1a1a;
  border-radius: 50rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.start-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.start-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.btn-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
  border-right: 3rpx solid #ffffff;
  border-bottom: 3rpx solid #ffffff;
  transform: rotate(-45deg);
}
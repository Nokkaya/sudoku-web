/* index.wxss - 温暖极简设计 */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;700&display=swap');

page {
  height: 100%;
  background: #faf9f7;
  font-family: 'Inter', 'Noto Sans SC', -apple-system, sans-serif;
  color: #2d3436;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 80rpx 48rpx;
  box-sizing: border-box;
}

/* 顶部Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-wrapper {
  position: relative;
  margin-bottom: 32rpx;
}

.logo-bg {
  width: 180rpx;
  height: 180rpx;
  background: #2d3436;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(45, 52, 54, 0.15);
}

.logo-number {
  font-family: 'Inter', sans-serif;
  font-size: 120rpx;
  font-weight: 700;
  color: #faf9f7;
  line-height: 1;
  letter-spacing: -4rpx;
}

.logo-accent {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #00b894;
  border-radius: 50%;
  border: 6rpx solid #faf9f7;
}

.title {
  font-family: 'Inter', sans-serif;
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 8rpx;
  color: #2d3436;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  font-weight: 400;
  color: #636e72;
  letter-spacing: 4rpx;
}

/* 难度选择区 */
.mode-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.section-label {
  display: block;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 6rpx;
  color: #b2bec3;
  text-transform: uppercase;
  margin-bottom: 24rpx;
  text-align: center;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 32rpx 36rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 2rpx solid #f1f2f6;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.mode-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.mode-item.active {
  background: #2d3436;
  border-color: #2d3436;
  box-shadow: 0 8rpx 24rpx rgba(45, 52, 54, 0.25);
}

.mode-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1f2f6;
  border-radius: 12rpx;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.mode-item.active .mode-icon {
  background: rgba(255, 255, 255, 0.15);
}

.mode-icon-dot {
  width: 12rpx;
  height: 12rpx;
  background: #b2bec3;
  border-radius: 50%;
}

.mode-item.active .mode-icon-dot {
  background: #00b894;
}

.mode-item:nth-child(1) .mode-icon-dot:nth-child(2) { opacity: 0.3; }
.mode-item:nth-child(1) .mode-icon-dot:nth-child(3) { opacity: 0.3; }

.mode-item:nth-child(2) .mode-icon-dot:nth-child(3) { opacity: 0.3; }

.mode-info {
  flex: 1;
}

.mode-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 4rpx;
}

.mode-item.active .mode-name {
  color: #ffffff;
}

.mode-desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #636e72;
}

.mode-item.active .mode-desc {
  color: rgba(255, 255, 255, 0.7);
}

.mode-check {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-check-icon {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #dfe6e9;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.mode-item.active .mode-check-icon {
  background: #00b894;
  border-color: #00b894;
}

/* 开始按钮 */
.action-section {
  width: 100%;
  margin-top: auto;
}

.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 104rpx;
  background: #2d3436;
  border-radius: 52rpx;
  box-shadow: 0 12rpx 32rpx rgba(45, 52, 54, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.start-btn:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 20rpx rgba(45, 52, 54, 0.2);
}

.start-btn text {
  font-family: 'Inter', sans-serif;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 4rpx;
}

.btn-arrow-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
  position: relative;
}

.btn-arrow-icon::before,
.btn-arrow-icon::after {
  content: '';
  position: absolute;
  background: #ffffff;
  border-radius: 2rpx;
}

.btn-arrow-icon::before {
  width: 18rpx;
  height: 3rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.btn-arrow-icon::after {
  width: 3rpx;
  height: 18rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%) rotate(45deg);
}
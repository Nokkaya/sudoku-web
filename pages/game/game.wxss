/* game.wxss */
page {
  height: 100%;
  background: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.header-left, .header-right {
  width: 160rpx;
}

.header-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #E8F4FD;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #0066FF;
}

.timer-icon {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #0066FF;
  border-top-color: transparent;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  to { transform: rotate(360deg); }
}

.timer {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: #2D3436;
  letter-spacing: 2rpx;
}

.header-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.hint-count {
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3436;
  margin-right: 12rpx;
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
  background: transparent;
  border: 3rpx solid #00D68F;
  border-radius: 50%;
  position: relative;
}

.hint-icon::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: 12rpx;
  background: #00D68F;
  border-radius: 2rpx;
}

/* 数独棋盘 */
.board-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.board {
  position: relative;
  background: #2D3436;
  border-radius: 24rpx;
  padding: 10rpx;
  box-shadow: 0 24rpx 80rpx rgba(45, 52, 54, 0.25);
}

.board-inner {
  position: relative;
  width: 630rpx;
  height: 630rpx;
}

/* 3x3 宫格边框 */
.grid-borders {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  pointer-events: none;
}

.border-h {
  position: absolute;
  left: 0;
  width: 100%;
  height: 5rpx;
  background: #F8F9FA;
  border-radius: 3rpx;
}

.border-h-1 {
  top: 33.33%;
}

.border-h-2 {
  top: 66.66%;
}

.border-v {
  position: absolute;
  top: 0;
  height: 100%;
  width: 5rpx;
  background: #F8F9FA;
  border-radius: 3rpx;
}

.border-v-1 {
  left: 33.33%;
}

.border-v-2 {
  left: 66.66%;
}

/* 格子样式 */
.cells {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.row {
  flex: 1;
  display: flex;
}

.cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  font-weight: 600;
  border-right: 1rpx solid #636E72;
  border-bottom: 1rpx solid #636E72;
  box-sizing: border-box;
  transition: all 0.2s ease;
  color: #FFFFFF;
}

.cell:nth-child(9) {
  border-right: none;
}

.row:nth-child(9) .cell {
  border-bottom: none;
}

/* 格子右边框和下边框只在特定位置显示 */
.cell:nth-child(3n) {
  border-right: 3rpx solid #F8F9FA;
}

.row:nth-child(3n) .cell {
  border-bottom: 3rpx solid #F8F9FA;
}

.cell:not(:nth-child(9)):nth-child(3n) {
  border-right: 3rpx solid #F8F9FA;
}

/* 第一个格子左上边框 */
.row:nth-child(1) .cell:nth-child(1) {
  border-top-left-radius: 16rpx;
}

/* 右上角 */
.row:nth-child(1) .cell:nth-child(9) {
  border-top-right-radius: 16rpx;
}

/* 左下角 */
.row:nth-child(9) .cell:nth-child(1) {
  border-bottom-left-radius: 16rpx;
}

/* 右下角 */
.row:nth-child(9) .cell:nth-child(9) {
  border-bottom-right-radius: 16rpx;
}

.cell.original {
  background: #3D4649;
  color: #FFFFFF;
}

.cell:not(.original):not(.empty) {
  color: #00D68F;
  font-weight: 700;
}

.cell.empty {
  color: transparent;
}

.cell.selected {
  background: #0066FF !important;
  color: #FFFFFF !important;
  box-shadow: inset 0 0 0 4rpx rgba(255, 255, 255, 0.3);
}

.cell.highlight:not(.selected) {
  background: #3D4649;
}

.cell.selected.highlight {
  background: #0066FF;
  opacity: 0.85;
}

/* 数字键盘 */
.number-pad {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 14rpx;
  width: 100%;
  max-width: 700rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  margin: 32rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.num-btn {
  width: 84rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  border-radius: 16rpx;
  font-size: 38rpx;
  font-weight: 700;
  color: #2D3436;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.num-btn:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  background: #E8F4FD;
  color: #0066FF;
}

.clear-btn {
  background: #FFE8E8;
}

.clear-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 4rpx;
  background: #FF6B6B;
  border-radius: 2rpx;
}

.clear-icon::before {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.clear-icon::after {
  transform: translate(-50%, -50%) rotate(45deg);
}

/* 功能按钮 */
.actions {
  display: flex;
  gap: 24rpx;
  width: 100%;
  max-width: 700rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.action-btn text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

.hint-btn-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #00D68F;
  border-radius: 50%;
  position: relative;
}

.hint-btn-icon::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: 10rpx;
  background: #00D68F;
  border-radius: 2rpx;
}

.restart-icon {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #2D3436;
  border-left-color: transparent;
  border-radius: 50%;
  position: relative;
  transition: transform 0.3s ease;
}

.restart-icon::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 10rpx solid #2D3436;
  transform: translateX(-50%) rotate(90deg);
}

.action-btn:active .restart-icon {
  transform: rotate(-90deg);
}

/* 完成状态 */
.completed-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(45, 52, 54, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  background: #FFFFFF;
  padding: 80rpx 60rpx;
  border-radius: 32rpx;
  text-align: center;
  max-width: 560rpx;
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 52rpx;
  font-weight: 700;
  color: #00D68F;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #636E72;
  margin-bottom: 48rpx;
}

.modal-stats {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 48rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #0066FF;
  font-family: 'SF Mono', 'Monaco', monospace;
}

.stat-label {
  font-size: 24rpx;
  color: #B2BEC3;
  margin-top: 12rpx;
  font-weight: 500;
}

.modal-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #0066FF 0%, #00D68F 100%);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 255, 0.35);
}
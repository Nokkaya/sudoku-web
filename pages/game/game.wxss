/* game.wxss - 温暖极简游戏界面 */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;700&display=swap');

page {
  height: 100%;
  background: #faf9f7;
  font-family: 'Inter', 'Noto Sans SC', -apple-system, sans-serif;
  color: #2d3436;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 16rpx 4rpx;
  margin-bottom: 32rpx;
}

.header-left, .header-right {
  width: 140rpx;
}

.header-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.mode-tag {
  display: inline-block;
  padding: 14rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.mode-tag text {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d3436;
  letter-spacing: 2rpx;
}

.timer-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 28rpx;
  background: #2d3436;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(45, 52, 54, 0.2);
}

.timer-icon {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #faf9f7;
  border-top-color: transparent;
  border-radius: 50%;
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  to { transform: rotate(360deg); }
}

.timer {
  font-family: 'Inter', monospace;
  font-size: 32rpx;
  font-weight: 600;
  color: #faf9f7;
  letter-spacing: 2rpx;
}

.hint-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
}

.hint-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #b2bec3;
  letter-spacing: 2rpx;
}

.hint-count {
  font-family: 'Inter', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #00b894;
}

/* 棋盘容器 */
.board-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 24rpx 0;
}

.board {
  position: relative;
  background: #2d3436;
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 24rpx 80rpx rgba(45, 52, 54, 0.2);
}

/* 3x3宫格边框 */
.grid-borders {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right: 8rpx;
  bottom: 8rpx;
  pointer-events: none;
}

.border-h {
  position: absolute;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #faf9f7;
  border-radius: 2rpx;
}

.border-h-1 { top: 33.33%; }
.border-h-2 { top: 66.66%; }

.border-v {
  position: absolute;
  top: 0;
  height: 100%;
  width: 4rpx;
  background: #faf9f7;
  border-radius: 2rpx;
}

.border-v-1 { left: 33.33%; }
.border-v-2 { left: 66.66%; }

/* 格子 */
.cells {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.row {
  flex: 1;
  display: flex;
}

.cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #4a5568;
  border-bottom: 1rpx solid #4a5568;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.cell:nth-child(9) { border-right: none; }
.row:nth-child(9) .cell { border-bottom: none; }

/* 3x3分隔 */
.cell:nth-child(3n) { border-right: 3rpx solid #faf9f7; }
.row:nth-child(3n) .cell { border-bottom: 3rpx solid #faf9f7; }

.cell-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  font-family: 'Inter', sans-serif;
  font-size: 40rpx;
  font-weight: 600;
  color: #faf9f7;
  transition: all 0.2s ease;
}

.cell.original .cell-inner {
  color: rgba(250, 249, 247, 0.4);
}

.cell:not(.original):not(.empty) .cell-inner {
  color: #00b894;
}

.cell.empty .cell-inner {
  color: transparent;
}

.cell.selected {
  background: #00b894 !important;
}

.cell.selected .cell-inner {
  color: #ffffff !important;
}

.cell.highlight:not(.selected) {
  background: rgba(250, 249, 247, 0.08);
}

/* 数字键盘 */
.number-pad {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  max-width: 640rpx;
  padding: 28rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  margin: 24rpx 0;
}

.num-btn {
  width: 76rpx;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1f2f6;
  border-radius: 16rpx;
  font-family: 'Inter', sans-serif;
  font-size: 34rpx;
  font-weight: 600;
  color: #2d3436;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.num-btn:active {
  transform: scale(0.92);
  background: #2d3436;
  color: #faf9f7;
}

.clear-btn {
  background: #ffeaea;
}

.clear-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 3rpx;
  background: #ff6b6b;
  border-radius: 2rpx;
}

.clear-icon::before {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.clear-icon::after {
  transform: translate(-50%, -50%) rotate(45deg);
}

/* 功能按钮 */
.actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
  max-width: 640rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.action-btn text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3436;
  letter-spacing: 2rpx;
}

.hint-icon {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #00b894;
  border-radius: 50%;
  position: relative;
}

.hint-icon::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 3rpx;
  height: 10rpx;
  background: #00b894;
  border-radius: 2rpx;
}

.restart-icon {
  width: 26rpx;
  height: 26rpx;
  border: 3rpx solid #2d3436;
  border-left-color: transparent;
  border-radius: 50%;
  position: relative;
}

.restart-icon::after {
  content: '';
  position: absolute;
  top: -4rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 8rpx solid #2d3436;
  transform: translateX(-50%) rotate(90deg);
}

/* 完成弹窗 */
.completed-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(45, 52, 54, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.completed-modal {
  background: #faf9f7;
  padding: 64rpx 52rpx;
  border-radius: 32rpx;
  text-align: center;
  max-width: 520rpx;
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.2);
}

.completed-title {
  font-family: 'Inter', sans-serif;
  font-size: 48rpx;
  font-weight: 700;
  color: #00b894;
  margin-bottom: 8rpx;
}

.completed-subtitle {
  font-size: 26rpx;
  color: #636e72;
  margin-bottom: 40rpx;
}

.completed-stats {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-family: 'Inter', monospace;
  font-size: 52rpx;
  font-weight: 700;
  color: #2d3436;
}

.stat-label {
  font-size: 22rpx;
  color: #b2bec3;
  margin-top: 8rpx;
  letter-spacing: 2rpx;
}

.completed-btn {
  width: 100%;
  padding: 28rpx;
  background: #2d3436;
  border-radius: 50rpx;
  font-family: 'Inter', sans-serif;
  font-size: 28rpx;
  font-weight: 600;
  color: #faf9f7;
  letter-spacing: 4rpx;
  box-shadow: 0 8rpx 24rpx rgba(45, 52, 54, 0.25);
}
/* game.wxss - 奢华极简主义游戏界面 */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&family=Noto+Serif+SC:wght@300;400;500&display=swap');

page {
  height: 100%;
  background: #0a0a0a;
  font-family: 'Noto Serif SC', 'Playfair Display', serif;
  overflow: hidden;
}

.page {
  position: relative;
  min-height: 100vh;
  padding: 40rpx 36rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
  z-index: 10;
}

.header-left, .header-right {
  width: 180rpx;
}

.header-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.mode-badge {
  display: inline-flex;
  padding: 12rpx 20rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.mode-text {
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 6rpx;
  color: rgba(212, 175, 55, 0.8);
  text-transform: uppercase;
}

.timer-block {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.timer-dot {
  width: 8rpx;
  height: 8rpx;
  background: #d4af37;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.4; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.timer-text {
  font-family: 'Playfair Display', serif;
  font-size: 36rpx;
  font-weight: 500;
  letter-spacing: 6rpx;
  color: #f5f5f0;
}

.header-right {
  display: flex;
  justify-content: flex-end;
}

.hint-block {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.hint-number {
  font-family: 'Playfair Display', serif;
  font-size: 32rpx;
  font-weight: 500;
  color: #d4af37;
}

.hint-label {
  font-size: 20rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.4);
  letter-spacing: 2rpx;
}

/* 装饰元素 */
.game-decoration {
  position: absolute;
  top: 160rpx;
  left: 36rpx;
  right: 36rpx;
  bottom: 300rpx;
  pointer-events: none;
  z-index: 0;
}

.corner-deco {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: rgba(212, 175, 55, 0.2);
  border-style: solid;
}

.corner-deco.top-left {
  top: 0;
  left: 0;
  border-width: 1rpx 0 0 1rpx;
}

.corner-deco.top-right {
  top: 0;
  right: 0;
  border-width: 1rpx 1rpx 0 0;
}

.corner-deco.bottom-left {
  bottom: 0;
  left: 0;
  border-width: 0 0 1rpx 1rpx;
}

.corner-deco.bottom-right {
  bottom: 0;
  right: 0;
  border-width: 0 1rpx 1rpx 0;
}

/* 数独棋盘 */
.board-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

.board-frame {
  padding: 8rpx;
  background: rgba(212, 175, 55, 0.1);
}

.board {
  position: relative;
  background: #0f0f0f;
  padding: 6rpx;
}

.board-inner {
  position: relative;
  width: 600rpx;
  height: 600rpx;
}

/* 3x3 宫格边框 */
.grid-borders {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  pointer-events: none;
}

.border-h {
  position: absolute;
  left: 0;
  width: 100%;
  height: 3rpx;
  background: #d4af37;
}

.border-h-1 {
  top: 33.33%;
}

.border-h-2 {
  top: 66.66%;
}

.border-v {
  position: absolute;
  top: 0;
  height: 100%;
  width: 3rpx;
  background: #d4af37;
}

.border-v-1 {
  left: 33.33%;
}

.border-v-2 {
  left: 66.66%;
}

/* 格子样式 */
.cells {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.row {
  flex: 1;
  display: flex;
}

.cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid rgba(255, 255, 255, 0.08);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.cell:nth-child(9) {
  border-right: none;
}

.row:nth-child(9) .cell {
  border-bottom: none;
}

/* 3x3 宫格分隔线 */
.cell:nth-child(3n) {
  border-right: 2rpx solid rgba(212, 175, 55, 0.3);
}

.row:nth-child(3n) .cell {
  border-bottom: 2rpx solid rgba(212, 175, 55, 0.3);
}

.cell-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.cell-inner text {
  font-family: 'Playfair Display', serif;
  font-size: 38rpx;
  font-weight: 500;
  color: #f5f5f0;
  letter-spacing: 2rpx;
}

.cell.original .cell-inner text {
  color: rgba(255, 255, 255, 0.3);
}

.cell:not(.original):not(.empty) .cell-inner text {
  color: #d4af37;
}

.cell.empty .cell-inner {
  color: transparent;
}

.cell.selected {
  background: rgba(212, 175, 55, 0.15) !important;
}

.cell.selected .cell-inner text {
  color: #d4af37 !important;
}

.cell.highlight:not(.selected) {
  background: rgba(255, 255, 255, 0.03);
}

/* 数字键盘 */
.keypad-section {
  margin-top: 40rpx;
  z-index: 10;
}

.keypad {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.key {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  transition: all 0.3s ease;
}

.key:active {
  background: rgba(212, 175, 55, 0.1);
  border-color: rgba(212, 175, 55, 0.4);
}

.key text {
  font-family: 'Playfair Display', serif;
  font-size: 32rpx;
  font-weight: 500;
  color: #f5f5f0;
}

.key-erase {
  border-color: rgba(212, 175, 55, 0.3);
}

.erase-icon {
  position: relative;
  width: 28rpx;
  height: 28rpx;
}

.erase-line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #d4af37;
  transform: rotate(-45deg);
}

.erase-line::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #d4af37;
  transform: rotate(90deg);
}

/* 功能按钮 */
.tools-section {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  z-index: 10;
}

.tool-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  transition: all 0.3s ease;
}

.tool-button:active {
  background: rgba(212, 175, 55, 0.05);
  border-color: rgba(212, 175, 55, 0.3);
}

.tool-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.hint-icon {
  border: 2rpx solid rgba(212, 175, 55, 0.6);
  border-radius: 50%;
}

.hint-icon::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 2rpx;
  height: 8rpx;
  background: rgba(212, 175, 55, 0.6);
}

.restart-icon {
  border: 2rpx solid rgba(212, 175, 55, 0.6);
  border-left-color: transparent;
  border-radius: 50%;
}

.restart-arrow {
  position: absolute;
  top: -6rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 8rpx solid rgba(212, 175, 55, 0.6);
  transform: translateX(-50%) rotate(90deg);
}

.tool-button:active .restart-icon {
  transform: rotate(90deg);
}

.tool-text {
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 4rpx;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
}